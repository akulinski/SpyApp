<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="381dp"
        android:layout_height="649dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444">

        <ImageView
            android:id="@+id/imageView_su"
            android:layout_width="wrap_content"
            android:layout_height="243dp"
            app:srcCompat="@drawable/header_1080" />


        <Button
            android:id="@+id/signupbutton"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/logintextfield"
            android:layout_alignTop="@+id/loginbutton"
            android:background="@drawable/buttonshape"
            android:text="Sign up"
            android:textColor="#f2f2f2" />

        <Button
            android:id="@+id/loginbutton"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/logintextfield"
            android:layout_marginBottom="72dp"
            android:background="@drawable/buttonshape"
            android:text="Log in"
            android:textColor="#f2f2f2"  />

        <EditText
            android:id="@+id/logintextfield"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="262dp"
            android:background="@drawable/texteditshape"
            android:ems="10"
            android:hint="@string/enter_login"
            android:inputType="textPersonName"
            android:padding="20dp"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_su"
            android:layout_centerHorizontal="true"
            android:text="log in or sign up to continue" />

        <EditText
            android:id="@+id/passwordtextfield"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="163dp"
            android:background="@drawable/texteditshape"
            android:ems="10"
            android:hint="@string/enter_password"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/connected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView_su"
            android:layout_toEndOf="@+id/textView"
            android:text="not connected"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="280dp"
            android:text=""
            android:gravity="center"
            android:textColor="@color/red"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>